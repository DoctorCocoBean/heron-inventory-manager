<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <title>Sign Up</title>
    </head>

    <body>
        <!-- log in block -->
        <div class="container-fluid d-flex justify-content-center align-items-center p-5 w-100 h-100">
            <div class="bg-light shadow rounded appFont m-5 p-4 d-flex align-items-center" style="width: 500px; height: 400px;">
                <div class="container-fluid">
                    <span class="greyText p-3">Please enter your details to sign up or log in.</span>
                    <h1 class="col p-3">Hello!</h1>
                    <input class="col my-3 loginInput" id="username" name="username" placeholder="  username" type="text" />
                    <input class="col my-3 loginInput" id="password" name="password" placeholder="  password" type="password" />

                    <div class="col my-3 w-100 ">
                        <button class="btn btn-primary" id="logInBtn" style="width: 49%;" onclick="login()">Log In</button>
                        <button class="btn btn-primary" id="signUpBtn" style="width: 49%;" onclick="signup()">Sign Up</button>
                    </div>

                    <a href="/guest-login" class="d-inline" title="Sign in as guest">Sign in as guest</a>
                </div>
            </div>
        </div>

        <!-- Bootstrap 5 CDN -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/stylesheets/InventoryStyle.css">

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="../scripts/inventoryManager.js"></script>

        <script>
            async function login() {
                console.log('logging in');

                const username = document.getElementById("username").value;
                const password = document.getElementById("password").value;

                if (username && password) {
                    const request = new Request("/login", {
                        method: "POST",
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            username: username,
                            password: password
                        }),
                    })

                    const response = await fetch(request);
                    if (response.status >= 400) {
                        alert("login failed: " + response.statusText);
                    } else {
                        window.location.href = "/";
                    }
                    const data = response.text().then((data) => {
                    });
                }
            }

            async function signup() {
                console.log('signing up');

                const username = document.getElementById("username").value;
                const password = document.getElementById("password").value;

                if (username && password) {
                    const request = new Request("/signup", {
                        method: "POST",
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            username: username,
                            password: password
                        }),
                    })

                    const response = await fetch(request);
                    if (response.status >= 400) {
                        alert("Sign up failed: " + response.statusText);
                    } else {
                        window.location.href = "/";
                        console.log('Sign up successful');
                    }
                }
            }
        </script>

    </body>
</html>