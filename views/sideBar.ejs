<style>
</style>

<link rel="stylesheet" href="/stylesheets/InventoryStyle.css">

<aside class=" sideBar" style="width: 230px; position: relative;">

    <img src="/images/book-app-icon.png" class="my-3" width="120" height="120" style="margin: auto; display: block;">

    <ul class="nav nav-pills flex-column">

    <li>
        <a href="/dashboard" class="sideBarLink ">
        <img class="mx-2" src="/images/dashboard-icon.png" width="30" height="30">
        Dashboard
        </a>
    </li>
    <li>
        <a href="/items" class="sideBarLink" style="">
        <img class="mx-2" src="/images/items-icon.png" width="30" height="30">
        Items
        </a>
    </li>
    <li>
        <a href="/lowstock" class="sideBarLink" style="">
        <img class="mx-2" src="/images/low-stock-icon.png" width="30" height="30">
        Low Stock
        </a>
    </li>
    <li>
        <a href="/activityLog" class="sideBarLink" style="">
        <img class="mx-2" src="/images/activity-log-icon.png" width="30" height="30">
        Activity Log
        </a>
    </li>
    <li>
        <a href="/transactionReport" class="sideBarLink" style="">
        <img class="mx-2" src="/images/transaction-icon.png" width="30" height="30">
        Transaction Report
        </a>
    </li>

    </ul>

    <div class="user-info p-3" style="position: absolute; bottom: 0; width: 100%;">
        <span class="appFont text-white p-2">Welcome, <%= user %>!</span>
        <a href="/log-out" class="d-inline" title="Log out">
            <img src="/images/sign-out.png" width="20" height="20" alt="Log Out Icon">
        </a>
    </div>      

    <script>
        function currentPageMatchesLink() 
        {
            const current = window.location.href;
            document.querySelectorAll(".sideBarLink").forEach(function(elem) {
                if (elem.href == current) {
                    elem.classList.add("activeLink");
                }
            });
        }

        currentPageMatchesLink();
    </script>
</aside>